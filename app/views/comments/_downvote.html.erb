<%= simple_form_for [vote.voteable.idiom, vote.voteable, vote], 
  html: { id: "comment_downvote_#{vote.voteable.id}", class: "active_upvote"}, 
  remote: true do |f| %>
 <%= f.hidden_field :vote_value, value: -1 %>
 <%= f.button :submit, '-', id: "comment_downvote_button_#{vote.voteable.id}" %>
<% end %>   