<%= simple_form_for @user do |f| %>
  <%= render 'shared/error_explanation', object: @user %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password, label: "Password: optional for edits" %>
  <%= f.input :password_confirmation %>  
  <%= f.input :zip_code, as: :string %>
  <%= f.input :about_me %>
  <%= f.input :receive_emails, label: "Receive emails?" %>
  <%= f.button :submit %>
<% end %>