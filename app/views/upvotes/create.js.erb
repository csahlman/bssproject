$('#<%= @voteable.class.to_s.downcase %>_upvote_<%= @voteable.id %>').
  addClass('badge-success')
$('#<%= @voteable.class.to_s.downcase %>_downvote_<%= @voteable.id %>').
  removeClass('badge-important')
$('#<%= @voteable.class.to_s.downcase %>_score_<%= @voteable.id %>').
  html('<%= @voteable.total_score %>')  
<% if @voteable.total_score >= 0 %>
  $('#<%= @voteable.class.to_s.downcase %>_score_<%= @voteable.id %>').
    addClass('positive').removeClass('negative')  
<% else %>
  $('#<%= @voteable.class.to_s.downcase %>_score_<%= @voteable.id %>').
    addClass('negative').removeClass('positive')  
<% end %>  
