<% if @vote.voteable.class.to_s == "Idiom" %>
  <% if @vote.vote_value == 1 %>
    $('#downvote').removeClass('btn-success')
    $('#upvote').addClass('btn-success')
  <% else %>
    $('#downvote').addClass('btn-success')
    $('#upvote').removeClass('btn-success')
  <% end %>
  $('#votes_count').html('<%= proper_score @vote %>')
<% elsif @vote.voteable.class.to_s == "Comment" %>
  <% if @vote.vote_value == 1 %>
    $('#comment_downvote_button_<%= @vote.voteable.id %>').removeClass('btn-success')
    $('#comment_upvote_button_<%= @vote.voteable.id %>').addClass('btn-success')
  <% else %>
    $('#comment_upvote_button_<%= @vote.voteable.id %>').removeClass('btn-success')
    $('#comment_downvote_button_<%= @vote.voteable.id %>').addClass('btn-success')
  <% end %>
  $('#score_<%= @vote.voteable.id %>').html('<%= proper_score @vote %>')
<% elsif @vote.voteable.class.to_s == "Tag" %>
  <% if @vote.vote_value == 1 %>
    $('#tag_downvote_button_<%= @vote.voteable.id.to_s %>').removeClass('btn-success')
    $('#tag_upvote_button_<%= @vote.voteable.id.to_s %>').addClass('btn-success')
  <% else %>
    $('#tag_upvote_button_<%= @vote.voteable.id.to_s %>').removeClass('btn-success')
    $('#tag_downvote_button_<%= @vote.voteable.id.to_s %>').addClass('btn-success')     
  <% end %>  
<% elsif @vote.voteable.class.to_s == "Edit" %>
  <% if @vote.vote_value == 1 %>
    alert("update edit")
  <% else %>

  <% end %>

<% end %>  
