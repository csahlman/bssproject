 <%= simple_form_for [vote.voteable.idioms.find(params[:idiom_id]), vote.voteable, vote], 
    html: { id: "tag_downvote_#{vote.voteable.id}"}, remote: true do |f| %>
   <%= f.hidden_field :vote_value, value: -1 %>
   <%= f.button :submit, '-', id: "tag_downvote_button_#{vote.voteable.id}", 
       class: vote.vote_value == -1 ? 'btn-danger' : "" %>
 <% end %>  
