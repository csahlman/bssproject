<%#= Sorry for anyone that has to read this fuckfest %>
<%= content_for(:title) { "Admin: #{@idiom.title}" }%>



<h1><%= @idiom.title %></h1> 
<%= link_to "Edits history", idiom_edits_path(@idiom) %><br>
<p><%= @idiom.description %></p>

<span>Tags: <%#= render @idiom.tags %></span><br>


<h2>Comments</h2>
<div class="comments">
  <ul>
    <%#= render @idiom.comments %>
  </ul>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              admin_idioms_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admin_idiom_path(@idiom), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admin_idiom_path(@idiom),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
