<%= simple_form_for [:admin, @user] do |f| %>
  <%= render 'shared/error_explanation' %>
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :password, label: "Password: optional for edits" %>
  <%= f.input :password_confirmation %>
  <%= f.input :zip_code %>
  <%= f.input :about_me %>
  <%= f.input :receive_emails %>
  <%= f.button :submit %>
<% end %>